<div class="py-4">
    <h2>Registro</h2>
    <hr class="w-50" />

    <form action="/users" method="POST">
        <div class="form-group row w-50 m-auto">
            <div class="form-group col-12 col-sm-6">
                <label>Nombre</label>
                <input class="form-control m-auto" name="nombre" />
            </div>
            <div class="form-group col-12 col-sm-6">
                <label>Apellido</label>
                <input class="form-control m-auto" name="apellido" />
            </div>
            <div class="form-group col-12 col-sm-6">
                <label>Email</label>
                <input class="form-control m-auto" type="email" name="email" />
            </div>
            <div class="form-group col-12 col-sm-6">
                <label>Contraseña</label>
                <input class="form-control m-auto" type="password" />
            </div>
            <div class="form-group col-12 col-sm-6">
                <label>Confirme Contraseña</label>
                <input class="form-control m-auto" type="password" name="password" />
            </div>
            <div class="form-group col-12 col-sm-6">
                <label>Fecha de Muerte</label>
                <input class="form-control m-auto" name="fecha_muerte" type="date"/>
            </div>

        </div>
        <button class="btn btn-info mb-3">Registrarme</button>
        <p><a href="/login"> Iniciar sesión</a></p>
    </form>
</div>