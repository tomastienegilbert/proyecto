<div class="py-5">
  <h2>Iniciar Sesión</h2>
  <hr class="w-50" />

  <form>
    <div class="form-group">
      <div class="form-group">
        <label>Email</label>
        <input type="email" value="ejemplo1@mail.com" name="email" class="form-control w-50 m-auto" />
      </div>
      <div class="form-group">
        <label>Password</label>
        <input name="password" type="password" value="encriptado1" class="form-control w-50 m-auto" />
      </div>
    </div>
    <button type="submit" class="btn btn-primary m-1" id="ingresoUsuario">Ingresa</button>
  </form>
    <p>¿Aún no tienes cuenta? <a href="/registro">Regístrate</a></p>
</div>

<script>
  document.querySelector("form").addEventListener("submit", async (e) => {
    e.preventDefault();
      //Campos de password deben calzar
    const email = document.querySelector("input[name='email']").value;
    const password = document.querySelector("input[name='password']").value;
    console.log(email, password);
    if (!email || !password) {
        return alert("Ingrese email y contraseña");
    }
    console.log("Ingresando");
    try{
        const response = await axios.post('/ingresos ', {
          email: email,
          password: password
        });

        //guardar token en local storage
        localStorage.setItem('usuario', JSON.stringify(response.data.usuario));
        localStorage.setItem('token', response.data.token);

        //redirigir a la vista agregar canciones con el token
        console.log(response.data);
        //window.location.replace("/agregarCanciones");
    } catch(e) {
    alert(e.response.data)
    }
  })
</script>