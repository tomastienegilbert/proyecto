<div class="py-5">
  <h2>Iniciar Sesión</h2>
  <hr class="w-50" />

  <form>
    <div class="form-group">
      <div class="form-group">
        <label>Email</label>
        <input id="email" type="email" value="ejemplo1@mail.com" name="email" class="form-control w-50 m-auto" />
      </div>
      <div class="form-group">
        <label>Password</label>
        <input id="password" name="password" type="password" value="encriptado1" class="form-control w-50 m-auto" />
      </div>
    </div>
    <button type="submit" class="btn btn-primary m-1" id="ingresoUsuario">Ingresa</button>
  </form>
    <p>¿Aún no tienes cuenta? <a href="/registro">Regístrate</a></p>
</div>

<script>
   const form = document.querySelector("form")
  form.addEventListener("submit", async (e) => {
    e.preventDefault()
    let [email, password] = document.querySelectorAll("input")
    email = email.value
    password = password.value
    try {
      const { data } = await axios.post("/ingresos", { email, password })
      const { usuario, token } = data;
      localStorage.setItem('usuario', JSON.stringify(usuario));
      localStorage.setItem('token', token);
      window.location = `/agregarcanciones`
    } catch (error) {
      Swal.fire({
        icon: 'error',
        title: 'Oops...',
        text: 'Credenciales incorrectas',
      })
    }
  })
</script>